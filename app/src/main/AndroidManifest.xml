<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="neildg.com.eagleeyesr">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.autofocus"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.front"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.front.autofocus"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="neildg.com.eagleeyesr.MainActivity"
            android:label="@string/title_activity_main"
            android:screenOrientation="sensorLandscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="neildg.com.eagleeyesr.ProcessingActivityDebug"
            android:label="Process Images"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name="neildg.com.eagleeyesr.ProcessingActivityRelease"
            android:label="Process Images"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name="neildg.com.eagleeyesr.MeanFusionActivity"
            android:process=":mean_fusion_process" />
        <activity
            android:name="neildg.com.eagleeyesr.CameraActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen" />
        <activity android:name="neildg.com.eagleeyesr.ImageViewActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen"
            android:screenOrientation="sensorLandscape"></activity>
        <activity
            android:name="com.darsh.multipleimageselect.activities.AlbumSelectActivity"
            android:theme="@style/MultipleImageSelectTheme">
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name="neildg.com.eagleeyesr.NewCameraActivity"
            android:screenOrientation="landscape"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:clearTaskOnLaunch="true"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen">
        </activity>
    </application>

</manifest>